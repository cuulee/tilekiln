# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_size = 4

[*.sql.jinja2]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2
